module purge
module load mpi-sgi
module load comp-intel

export MPI_BUFS_PER_PROC=256
export OMP_NUM_THREADS=1

unset MPI_IB_RECV_MSGS

cd $PBS_O_WORKDIR
mpiexec -np 8192 ./rayleigh.opt -nprow 128 -npcol 64 >> logfile2
