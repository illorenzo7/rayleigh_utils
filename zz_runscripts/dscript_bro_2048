module purge
module load mpi-sgi/mpt
module load comp-intel

export MPI_BUFS_PER_PROC=256
export OMP_NUM_THREADS=1

cd $PBS_O_WORKDIR

mpiexec -np 2048 ./rayleigh.opt -nprow 64 -npcol 32 >> logfile1
